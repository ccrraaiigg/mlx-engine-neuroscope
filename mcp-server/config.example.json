{
  "mcp": {
    "port": 3000,
    "host": "localhost",
    "maxConnections": 100
  },
  "mlxEngine": {
    "apiUrl": "http://localhost:50111",
    "timeout": 30000,
    "retryAttempts": 3,
    "maxConcurrentRequests": 10
  },
  "storage": {
    "activationsPath": "./data/activations",
    "circuitsPath": "./data/circuits",
    "cachePath": "./data/cache",
    "maxCacheSize": 1073741824
  },
  "analysis": {
    "defaultTimeout": 60000,
    "cacheResults": true,
    "maxCircuitCandidates": 100,
    "confidenceThreshold": 0.8
  },
  "security": {
    "enableAuth": false,
    "rateLimiting": {
      "windowMs": 900000,
      "maxRequests": 100
    }
  },
  "logging": {
    "level": "INFO",
    "format": "text"
  }
}